{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "./lib",
    "lib": ["es5", "scripthost", "es2015"]
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules"]
}
